<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_hw_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_news_padding"
            android:textColor="@color/text_news_title"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/spacer_medium"
            android:showDividers="middle">

            <TextView
                android:id="@+id/text_hw_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/text_mark_padding"
                android:textColor="@color/text_news_type"
                android:textSize="@dimen/text_news_bottom_textsize"
                android:textStyle="bold"
                android:singleLine="true"/>

            <ImageView
                android:id="@+id/image_news_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text_hw_course"
                android:src="@android:drawable/ic_menu_send" />

            <TextView
                android:id="@+id/text_hw_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image_news_sender"
                android:layout_toLeftOf="@+id/image_news_date"
                android:padding="@dimen/text_news_padding"
                android:textColor="@color/text_news_content"
                android:textSize="@dimen/text_news_bottom_textsize" />

            <ImageView
                android:id="@+id/image_news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/text_hw_date"
                android:src="@android:drawable/ic_menu_recent_history" />

            <TextView
                android:id="@+id/text_hw_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/text_news_padding"
                android:textSize="@dimen/text_news_bottom_textsize"
                android:singleLine="true"/>


        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

