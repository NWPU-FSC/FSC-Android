<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/spacer_medium"
        android:showDividers="middle">

        <TextView
            android:id="@+id/text_parent_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/text_mark_padding"
            android:singleLine="true"
            android:textColor="@color/text_news_type"
            android:textSize="@dimen/text_news_bottom_textsize"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_news_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/text_parent_state"
            android:contentDescription="@string/text_parent_name"
            android:src="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/text_parent_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/image_news_date"
            android:layout_toEndOf="@+id/image_news_sender"
            android:padding="@dimen/text_news_padding"
            android:singleLine="true"
            android:textColor="@color/text_news_content"
            android:textSize="@dimen/text_news_bottom_textsize" />

        <ImageView
            android:id="@+id/image_news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/text_addstu_relation"
            android:layout_toStartOf="@+id/text_parent_date"
            android:src="@android:drawable/ic_menu_view" />

        <TextView
            android:id="@+id/text_parent_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/text_news_padding"
            android:singleLine="true"
            android:textSize="@dimen/text_news_bottom_textsize" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

