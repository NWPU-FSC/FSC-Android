<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.banixc.fsc.fscroid.activity.NewsDetailActivity">

    <TextView
        android:id="@+id/text_detial_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_detial_title_size" />

    <View
        android:id="@+id/divier_detial"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/text_detial_title"
        android:layout_marginBottom="@dimen/padding_news_detial"
        android:layout_marginTop="@dimen/padding_news_detial"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/text_news_detail_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/divier_detial" />


    <TextView
        android:id="@+id/text_detail_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_news_detail_sender"
        android:paddingTop="@dimen/padding_news_detial"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:padding="@dimen/text_detail_content_padding"
        android:textSize="@dimen/text_detail_content_size" />

</RelativeLayout>
